<div class='mt-4'>
   <div class='row'>
     
         {{#each courses}}
          <div class='col-sm-4'>
           
               <div class='card '>
                   <a href="/course/{{this.slug}}">
                  <img src='{{this.image}}' class='card-img-top' alt='...' />
                  
                  <div class='card-body'>
                     <h5 class='card-title'>{{this.name}}</h5>
                      </a>
                     <p class='card-text ' >{{this.description}}</p>
                     <a href='/course/{{this.slug}}' class='btn btn-primary'>Xem ngay</a>
                  </div>
                  
               </div>
           
            </div>
         {{/each}}
      </div>
   </div>
</div>