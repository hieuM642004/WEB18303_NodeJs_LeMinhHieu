<div class="mt-4">
  <div class="row align-items-center shadow p-4 rounded">
    <div class="col-5">
      <img src="{{course.image}}" class="" alt="..." style="width: 500px;" />
    </div>
    <div class="col-7">
      <div>
        <h5>{{course.name}}</h5>
        <p>{{course.description}}</p>
        <p><small class="text-body-secondary">{{course.createdAt}}</small></p>
      </div>
    </div>
  </div>
</div>

<section style="background-color: #eee;">
  <div class="container my-5 py-5">
    <div class="row d-flex justify-content-center">

      <div class="col-md-12 col-lg-10 col-xl-8">

        <div class="card">
          <h4>Bình luận</h4>
          <div id="commentSection" class="mt-3"></div>

          <div
            class="card-footer py-3 border-0"
            style="background-color: #f8f9fa;"
          >
            <div class="d-flex flex-start w-100">
              <img
                class="rounded-circle shadow-1-strong me-3"
                src="https://s3-ap-southeast-1.amazonaws.com/homepage-media/wp-content/uploads/2021/01/28133406/docker-banner.png"
                alt="avatar"
                width="40"
                height="40"
              />
              <div class="form-outline w-100">
                <textarea
                  class="form-control"
                  id="textAreaExample"
                  rows="4"
                  style="background: #fff;"
                  placeholder="Nội dung..."
                ></textarea>

              </div>
            </div>
            <div class="float-end mt-2 pt-1">
              <button
                type="button"
                class="btn btn-primary btn-sm"
                onclick="addComment()"
              >Gửi</button>
              <button
                type="button"
                class="btn btn-outline-primary btn-sm"
              >Hủy</button>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>

<script>

  function addComment() { var comment =
  document.getElementById('textAreaExample').value; var comments =
  JSON.parse(localStorage.getItem('comments')) || []; comments.push(comment);
  localStorage.setItem('comments', JSON.stringify(comments)); displayComments();
  } function displayComments() { var comments =
  JSON.parse(localStorage.getItem('comments')) || []; var commentSection =
  document.getElementById('commentSection'); comments.forEach(function(comment)
  { commentSection.innerHTML += ` <div class="card-body"> <div class="d-flex
  flex-start align-items-center"> <img class="rounded-circle shadow-1-strong
  me-3"
  src="https://s3-ap-southeast-1.amazonaws.com/homepage-media/wp-content/uploads/2021/01/28133406/docker-banner.png"
  alt="avatar" width="60" height="60" /> <div> <h6 class="fw-bold text-primary
  mb-1">Hieu</h6> <p class="text-muted small mb-0"> 08/03/2024 </p> </div>
  </div> <p class="mt-3 mb-4 pb-2"> ${comment} </p> <div class="small d-flex
  justify-content-start"> <a href="#!" class="d-flex align-items-center me-3">
  <i class="far fa-thumbs-up me-2"></i> <p class="mb-0">Like</p> </a> <a
  href="#!" class="d-flex align-items-center me-3"> <i class="far
  fa-comment-dots me-2"></i> <p class="mb-0">Comment</p> </a> <a href="#!"
  class="d-flex align-items-center me-3"> <i class="fas fa-share me-2"></i> <p
  class="mb-0">Share</p> </a> </div> </div> `; }); } displayComments();
</script>